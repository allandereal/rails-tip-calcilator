<% content_for :title, "Admin | Calculations" %>
<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-base font-semibold text-gray-900">Tip Calculations</h1>
      <p class="mt-2 text-sm text-gray-700">A list of all Tip Calculations from the Splitter Form.</p>
    </div>
    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
      <%= link_to "Open Calculator", root_path, class: "block rounded-md bg-teal-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-teal-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-teal-600" %>
    </div>
  </div>
  <div class="mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8 overflow-x-scroll">
        <table class="min-w-full divide-y divide-gray-300">
          <thead>
          <tr>
            <% ["Bill Amount", "Tip Amount", "Number of People", "Total Bill", "Per-Person Amount", "Date Created"].each_with_index do |heading, index| %>
              <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 <%= index==0 ? "sm:pl-3" : "" %>"><%= heading %></th>
            <% end %>
          </tr>
          </thead>
          <tbody class="bg-white font-sans">
          <% @calculations.each do |calculation| %>
            <tr class="even:bg-gray-50 *:whitespace-nowrap *:px-3 *:py-4 *:text-sm text-gray-500">
              <td class="font-medium text-gray-700 sm:pl-3">$<%= money_format calculation.bill %></td>
              <td><%= calculation.tip %>%</td>
              <td><%= calculation.people %></td>
              <td>$<%= money_format calculation.total_per_person %></td>
              <td>$<%= money_format calculation.tip_per_person %></td>
              <td><%= calculation.created_at.strftime("%d/%m/%Y") %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
        <div class="mt-6 px-4 md:px-0">
          <%= will_paginate @calculations %>
        </div>
      </div>
    </div>
  </div>
</div>